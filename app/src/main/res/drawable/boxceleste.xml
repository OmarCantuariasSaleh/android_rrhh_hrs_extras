<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                <corners
                    android:radius="10dp"
                    />
                <gradient
                    android:angle="270"
                    android:centerX="79%"
                    android:centerColor="#00a4e1"
                    android:startColor="#00baff"
                    android:endColor="#207fa3"
                    android:type="linear"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <stroke
                    android:width="1dp"
                    android:color="#02b0d7"
                    />
        </shape>
    </item>

</selector>