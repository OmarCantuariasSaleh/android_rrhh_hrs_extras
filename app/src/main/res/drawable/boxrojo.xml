<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="270"
                android:centerX="60%"
                android:centerColor="#dc4378"
                android:startColor="#ff3f80"
                android:endColor="#9f4161"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="#ff007b"
                />

        </shape>
    </item>


</selector>