<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                <corners
                    android:radius="5dp"
                    />
                <gradient
                    android:angle="270"
                    android:centerX="60%"
                    android:centerColor="#3038A1"
                    android:startColor="#4D67DE"
                    android:endColor="#15174A"
                    android:type="linear"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <stroke
                    android:width="1dp"
                    android:color="#02b0d7"
                    />
        </shape>
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="270"
                android:centerX="60%"
                android:centerColor="#cf006e"
                android:startColor="#f40082"
                android:endColor="#6b0043"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="#ff08b9"
                />

        </shape>
    </item>


</selector>